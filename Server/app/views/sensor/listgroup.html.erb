<script type="text/javascript">
    
function showDiv() {

    div = document.getElementById('buttonAdd');
    div.style.display = "none";
    div2 = document.getElementById('addGroup');
    div2.style.display = "block";

}
function closeDiv() {
    div2 = document.getElementById('addGroup');
    div2.style.display = "none";
    div = document.getElementById('buttonAdd');
    div.style.display = "block";
}

</script>

<style type="text/css">

    #addGroup{
    display: none;
    }

</style>

<div class="container">

<div class="row" id="addGroup">

<form action="/addgroup"  method="post">
  <div class="col-md-3 " style="text-align: right;"></div>
  <div class="col-md-3 " style="">
  <label for="min">Name:</label>
  <input type="text" class="form-control" name="name" style="width: 200px"> 
  <label for="max">Latitude:</label>
  <input type="text" class="form-control" name="lat"  style="width: 200px"> 
  <label for="max">Longitude:</label>
  <input type="text" class="form-control" name="lon"  style="width: 200px"> 
        
</div>

<div class="col-md-6 "">
<div style="padding: 1em;"></div>
    <div class="form-group">
      <input type="submit" value="Create New" class="btn btn-primary btn-lg" > 
   </div>
</div>
  
  </form>


<div class="col-md-3"><button onclick="javascript:closeDiv();"  class="btn btn-default">Close</button></div>
</div>

<div class="col-md-12 " id="buttonAdd" style="text-align: right;">
    <button onclick="javascript:showDiv();"  class="btn btn-primary">Create new</button>
</div>
 <hr>
    
<table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th class="hidden-xs">
                            Ref
                        </th>
                        <th>
                            Position(Lat/Lon)
                        </th>
                    </tr>
                </thead>
                <tbody>
                <% @groups.each do |i| %>
                    <tr class="active">
                           
                        <td>
                        <%= link_to i.getName, group_path(:id => i.getRef  ) %> 
                           
                        </td>
                        <td class="hidden-xs">
                             <%= i.getRef %>
                        </td>                       
                        <td>
                            <%= i.getLat %>,<br class="visible-xs"><%= i.getLon %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

            <hr>
</div>

<div style="padding: 10em;"></div>