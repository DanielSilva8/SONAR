<div class="container"> 
	
<div class="row">

    <div class="col-md-6">
  	<h1>Group: <%= @name %></h1>
  	<h2 class="hidden-xs">Ref: <%= @ref %></h2>
  	</div>

  <div class="col-md-6 " style="text-align: right;">
  	<h2> Position(Lat/Lon): <%= @lat %>,<br class="visible-xs"><%= @lon %>  </h2>
  </div>


</div>
<hr>

<div class="row">   

<div class="col-md-3 ">
  <h1> Sensors: </h1>
</div>               
<div class="col-md-9 ">

<table class="table" name="realTable" id="realTable">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th class="hidden-xs">
                            Reference
                        </th>
                        <th>
                            
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% @sensors.each do |i| %>
                    <tr class="active">
                           
                        <td>
                        <%= link_to i.getName, sensor_path(:id => i.getRef  ) %>                         
                        </td>
                        <td class="hidden-xs">
                            <%= i.getRef %>
                        </td>                       
                        <td>
                            <% if i.getState == 1 %>
                          <font color="green">Online</font>
                            <% else %>
                            <font color="red">Offline</font>
                            <% end%>
                        </td>
                        
                    </tr>
                    <% end %>
                </tbody>
            </table>

</div> 

            <hr>
</div>

<div style="padding-bottom: 10em;">
    
</div>